<ul>
  <% @lists.each do |list| %>
    <li>
      <%= link_to list.name, list_path(id: list.id) %> -
      <%= link_to icon('fa-solid', 'pen'), edit_list_path(list) %>
      <%= link_to icon('fa-solid', 'trash'), list_path(list),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </li>
  <% end %>
</ul>

<%= link_to 'New list', new_list_path, class:'btn btn-primary'  %>
